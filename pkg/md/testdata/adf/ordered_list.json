                ]
              },
              {
                "type": "listItem",
                "content": [
                  {"type": "paragraph", "content": [{"type": "text", "text": "Second"}]}
                ]
              },
              {
                "type": "listItem",
                "content": [
                  {"type": "paragraph", "content": [{"type": "text", "text": "Third"}]}
                ]
              }
            ]
          }
        ]
      }
    }
  ]
}
